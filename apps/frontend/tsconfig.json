{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "es2020"], /* Include DOM types */
    "module": "es2015", /* Use ES modules for browser */
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}