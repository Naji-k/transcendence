# Production reverse proxy
:9000 {
    # Frontend requests
    handle /* {
        reverse_proxy pong:8080
    }

    # Backend API
    handle /trpc/* {
        reverse_proxy pong:3000
    }
    handle /api/* {
        reverse_proxy pong:3000
    }

    # Logging
    log {
        output stdout
        format console
    }
}