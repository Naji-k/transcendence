{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler", // req for packages to load correctly in node and vite
    "lib": ["ES2020"],
    "esModuleInterop": true, // to allow import of commonjs modules
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    
    "sourceMap": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true
  }
}
